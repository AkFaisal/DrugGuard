<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:background="#C6C2C2"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:layout_goneMarginTop="10dp"
    android:id="@+id/cardViewID"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"

    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorWhite"

        android:layout_width="370dp"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/orderList_orderID_Id"
            android:layout_width="206dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="Order ID"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.127" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/orderList_orderTotalPrice_Id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:text="Total Price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/orderList_orderID_Id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/orderList_orderID_Id"
            app:layout_constraintTop_toBottomOf="@+id/orderList_orderID_Id"
            app:layout_constraintVertical_bias="0.218" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/orderList_orderStatus_Id"
            android:layout_width="83dp"
            android:layout_height="22dp"
            android:text="Status"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toEndOf="@+id/orderList_orderID_Id"
            app:layout_constraintTop_toTopOf="@+id/orderList_orderID_Id"
            app:layout_constraintVertical_bias="0.137" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/orderList_orderTime_Id"
            android:layout_width="79dp"
            android:layout_height="20dp"
            android:text="Order Time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/orderList_orderStatus_Id"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/orderList_orderStatus_Id"
            app:layout_constraintTop_toTopOf="@+id/orderList_orderTotalPrice_Id"
            app:layout_constraintVertical_bias="0.36" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/orderList_DarNumber_Id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Darnumber"
            app:layout_constraintBottom_toTopOf="@+id/orderList_orderTime_Id"
            app:layout_constraintEnd_toEndOf="@+id/orderList_orderStatus_Id"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="@+id/orderList_orderStatus_Id"
            app:layout_constraintTop_toBottomOf="@+id/orderList_orderStatus_Id"
            app:layout_constraintVertical_bias="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>