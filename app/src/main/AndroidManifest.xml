<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drugguard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/druggurd_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rounded_corner"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDrug"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.drugguard.OrderList.OrderList"
            android:parentActivityName="com.example.drugguard.MainActivity"></activity>
        <activity
            android:name="com.example.drugguard.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyDrug.NoActionBar">

        </activity>
        <activity android:name="com.example.drugguard.MyLogin.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drugguard.MyCart.CartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>